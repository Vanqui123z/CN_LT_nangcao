<link rel="stylesheet" href="/css/login.css">
<link rel="stylesheet" href="/css/auth.css">

<% if (error) { %>
  <div class="notification-container">
    <div class="notification">
      <div class="icon">!</div>
      <div class="message">
        <%=error %>
      </div>
      <div class="close-btn">×</div>
      <div class="timer"></div>
    </div>
  </div>
  <% } %>
    <% if (success) { %>
      <div class="notification-container">
        <div class="notification">
          <div class="iconSuccess">*</div>
          <div class="message">
            <%= success %>
          </div>
          <d<!--    
 
            <h1><%= title %></h1>
             <table border="1">
                 <tr>
                     <th>ID</th>
                     <th>Tiêu đề</th>
                     <th>Mô tả</th>
                     <th>Thời gian bắt đầu</th>
                     <th>Thời gian kết thúc</th>
                     <th>Màu</th>
                 </tr>
                 <% events.forEach(event => { %> <!-- lặp qua tất cả các events -->
                     <tr>
                         <td><%= event._id %></td> 
                         <td><%= event.title %></td> <!-- lấy dữ liệu title của event -->
