
 <!-- Main Content -->
 <div class="container mt-3">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="mb-3">
                    <a href="/calendar" id="calendarBtn" class="btn sidebar-btn" onclick="navigateTo('/calendar', 'calendarBtn', event)">Calendar</a>
                    <a href="/todolist" id="todolistBtn" class="btn sidebar-btn" onclick="navigateTo('/todolist', 'todolistBtn', event)">Todolist</a>
                    <a href="/plan" id="planBtn" class="btn sidebar-btn" onclick="navigateTo('/plan', 'planBtn', event)">Plan</a>
                    <a href="/profile" id="profileBtn" class="btn sidebar-btn" onclick="navigateTo('/profile', 'profileBtn', event)">Profile</a>
                </div>
        </div>
        
        <!-- Content Area -->
        <div class="col-md-9">
            <div class="content-area">
                <!-- Calendar Tab -->
                <div id="calendar-content" class="tab-content">
                    <%- include('./calendar') %>
                </div>
                
                <!-- Todolist Tab -->
                <div id="todolist-content" class="tab-content d-none">
                    <%- include('todolist') %>
                </div>
                
                <!-- Plan Tab -->
                <div id="plan-content" class="tab-content d-none">
                    <%- include('plan') %>
                </div>
                
                <!-- Profile Tab -->
                <div id="profile-content" class="tab-content d-none">
                    <%- include('profile') %>
                </div>
            </div>
        </div>
    </div>
</div>
